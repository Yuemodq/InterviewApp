<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:xw="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.xw.interviewapp.ui.view.FooterSlideGradualnessView
        android:id="@+id/fsgv_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        xw:icon="@mipmap/home"
        xw:text_size="12sp"
        xw:text="首页"/>

    <com.xw.interviewapp.ui.view.FooterSlideGradualnessView
        android:id="@+id/fsgv_map"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        xw:icon="@mipmap/map"
        xw:text_size="12sp"
        xw:text="地图"/>

    <com.xw.interviewapp.ui.view.FooterSlideGradualnessView
        android:id="@+id/fsgv_media"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        xw:icon="@mipmap/media"
        xw:text_size="12sp"
        xw:text="媒体"/>

    <com.xw.interviewapp.ui.view.FooterSlideGradualnessView
        android:id="@+id/fsgv_me"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        xw:icon="@mipmap/me"
        xw:text_size="12sp"
        xw:text="我"/>

</LinearLayout>